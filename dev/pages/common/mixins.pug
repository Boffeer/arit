include icons


mixin pic(data)
	picture(class= data.pictureClass)
		source(srcset= data.src+".webp 1x,"+data.src+"@2x.webp 2x", type="image/webp")
		//- img(class= data.imgClass, src= data.src+data.ext alt= data.alt)
		img(style= data.style, class= data.imgClass, src= data.src+'.'+data.ext, srcset= data.src+"@2x."+data.ext+" 2x", alt= data.alt)


mixin teacherSlide(data)
	div.teachers-slide(class= data.classes)
		- var src = data.src
		+pic({
			pictureClass: 'teachers__pic',
			ext: 'png',
			src: src
		})
		h3.teachers-slide__title= data.title
		p.teachers-slide__descr= data.descr


